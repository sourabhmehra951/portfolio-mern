{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ],
  "env": {
    "VITE_API_BASE": "https://portfolio-backend-49ut.onrender.com"
  }
}
